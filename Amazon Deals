  <script>
    // --- SAMPLE PRODUCTS ---
    // Replace the URLs with your Amazon affiliate short links.
    const SAMPLE = [
      {
        id:1,
        title: 'Boat Earphones (Budget Pick)',
        price: '₹299',
        img: 'https://images.unsplash.com/photo-1518444029709-6c2fb2e2e3a6?auto=format&fit=crop&w=800&q=60',
        link: 'YOUR_AFFILIATE_LINK_HERE'
      },
      {
        id:2,
        title: 'LED Strip Light (Room vibe)',
        price: '₹499',
        img: 'https://images.unsplash.com/photo-1505682634904-d7cdb25d7a4a?auto=format&fit=crop&w=800&q=60',
        link: 'YOUR_AFFILIATE_LINK_HERE'
      },
      {
        id:3,
        title: 'Phone Stand & Holder',
        price: '₹199',
        img: 'https://images.unsplash.com/photo-1585386959984-a4155227c6f9?auto=format&fit=crop&w=800&q=60',
        link: 'YOUR_AFFILIATE_LINK_HERE'
      }
    ];

    function renderProducts(){
      const q = document.getElementById('search').value.toLowerCase();
      const el = document.getElementById('products');
      el.innerHTML = '';
      const list = SAMPLE.filter(p=>p.title.toLowerCase().includes(q));
      if(list.length===0){el.innerHTML = '<div style="padding:8px;color:var(--muted)">No products found — click "Edit sample items" to add your own.</div>';return}
      list.forEach(p=>{
        const node = document.createElement('div'); node.className='product';
        node.innerHTML = `
          <img src="${p.img}" alt="${p.title}" />
          <h3>${p.title}</h3>
          <div class="small">Price: <span class="price">${p.price}</span></div>
          <div style="display:flex;gap:8px;margin-top:8px;align-items:center">
            <a class="btn" href="#" onclick="openLink('${p.link}')">Buy on Amazon</a>
            <button class="copy" onclick="copyLink('${p.link}')">Copy link</button>
          </div>
        `;
        el.appendChild(node);
      })
    }

    function openLink(u){
      if(!u || u.includes('YOUR_AFFILIATE_LINK_HERE')){alert('Replace the placeholder link with your affiliate link in the source.');return}
      window.open(u, '_blank');
    }

    function copyLink(u){
      if(!u || u.includes('YOUR_AFFILIATE_LINK_HERE')){alert('Replace the placeholder link with your affiliate link in the source.');return}
      navigator.clipboard.writeText(u).then(()=>{alert('Link copied to clipboard')});
    }

    function openAll(){
      const ok = confirm('Open all product links in new tabs?');
      if(!ok) return;
      SAMPLE.forEach(p=>{ if(p.link && !p.link.includes('YOUR_AFFILIATE_LINK_HERE')) window.open(p.link,'_blank') });
    }

    function sharePage(){
      const url = location.href;
      if(navigator.share){navigator.share({title:document.title,text:'Check these deals',url})}
      else{prompt('Copy this link to share', url)}
    }

    function editExample(){
      const t = prompt('Add a new item in the format: title|price|imageURL|affiliateLink');
      if(!t) return;
      const parts = t.split('|');
      if(parts.length<4){alert('Invalid format — use title|price|imageURL|affiliateLink');return}
      SAMPLE.push({id:Date.now(),title:parts[0],price:parts[1],img:parts[2],link:parts[3]});
      renderProducts();
    }

    // initial render
    renderProducts();
  </script>
